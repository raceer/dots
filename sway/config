#
# Status Bar:
#
# Read `man 5 sway-bar` for more information about this section.
bar {
	status_command i3status
	mode hide

    # When the status_command prints a new line to stdout, swaybar updates.
    # The default just shows the current date and time.
    # status_command while date +'%Y-%m-%d %I:%M:%S %p'; do sleep 1; done

    colors {
        background $grey0
        statusline $grey5
        separator  $grey3

        # Workspace colors
        focused_workspace  $grey4 $grey1 $grey6
        inactive_workspace $grey1 $grey0 $grey5
        urgent_workspace   $grey3 $grey0 $grey4
        binding_mode       $grey6 $grey3 $grey6
    }
}

include /etc/sway/config.d/*

### Keybindings 

  # Move your focus around
  bindsym $mod+$left focus left
  bindsym $mod+$down focus down
  bindsym $mod+$up focus up
  bindsym $mod+$right focus right
  # Or use $mod+[up|down|left|right]
  bindsym $mod+Left focus left
  bindsym $mod+Down focus down
  bindsym $mod+Up focus up
  bindsym $mod+Right focus right

  # Move the focused window with the same, but add Shift
  bindsym $mod+Shift+$left move left
  bindsym $mod+Shift+$down move down
  bindsym $mod+Shift+$up move up
  bindsym $mod+Shift+$right move right
  # Ditto, with arrow keys
  bindsym $mod+Shift+Left move left
  bindsym $mod+Shift+Down move down
  bindsym $mod+Shift+Up move up
  bindsym $mod+Shift+Right move right

# mouse button for dragging.
floating_modifier $mod normal

# Reload the configuration file
bindsym $mod+Shift+c reload

# Start a terminal
bindsym $mod+Return exec $term

# Kill focused window
bindsym $mod+Shift+q kill

# Start your launcher
bindsym $mod+d exec $menu

# Functionality
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl --min-val=2 -q set 3%-
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl -q set 3%+
bindsym Ctrl+Print exec --no-startup-id maim | xclip -selection clipboard -t image/png
bindsym Ctrl+$mod+x exec --no-startup-id maim --select | xclip -selection clipboard -t image/png

bindsym $mod+Control+d exec --no-startup-id dmenu_run
bindsym $mod+Control+v exec copyq show

set $def mode "default"
### Modes
bindsym $mod+o mode "launcher"
mode "launcher" {
	bindsym f exec firefox
  bindsym w exec nohup flatpak run com.brave.Browser &>/dev/null; $def
	bindsym o exec obsidian; $def
  bindsym e exec emacs; $def
	
	bindsym Escape mode "default"
	bindsym Return mode "default"
}

bindsym $mod+x mode "system commands"
mode "system commands" {
	bindsym u exec shutdown now
	bindsym x exec systemctl poweroff -i
	bindsym o exec swaymsg exit
	bindsym --no-repeat n exec systemctl suspend && swaylock --color=000000
	bindsym l exec swaylock --color=000000; $def
	bindsym q [class=".*"] kill; $def

	bindsym Escape mode "default"
	bindsym Return mode "default"
}

bindsym $mod+p mode "display"
mode "display" {
     	bindsym 1 exec ~/.screenlayout/Laptop.sh
     	bindsym 3 exec ~/.screenlayout/Laptop_Portable.sh
     	bindsym 4 exec ~/.screenlayout/Portable.sh
     	bindsym 9 exec ~/.screenlayout/PortableInverted.sh
     	bindsym 2 exec ~/.screenlayout/HDMI.sh

	bindsym Return mode "default"
}

bindsym $mod+Control+w mode "workspace"
mode "workspace" {
     bindsym e workspace emacs
     bindsym w workspace web

     bindsym $mod+Shift+e move container to workspace emacs
     bindsym $mod+Shift+w move container to workspace web
     bindsym Escape mode "default"
     bindsym Return mode "default"
}

